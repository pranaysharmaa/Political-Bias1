{
  "manifest_version": 3,
  "name": "BiasCheck Highlighter",
  "version": "1.0",
  "description": "Highlights political bias in website content using a remote API.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://cors-anywhere.herokuapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
